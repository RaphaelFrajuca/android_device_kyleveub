                <MediaCodec name="OMX.brcm.video.h263.decoder" type="video/3gpp" />
		<MediaCodec name="OMX.brcm.audio.aac.encoder" type="audio/mp4a-latm" />
    </Encoders>
	<Include href="media_codecs_google_video_le.xml" />
